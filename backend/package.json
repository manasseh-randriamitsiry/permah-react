{
  "name": "event-manager-backend",
  "version": "1.0.0",
  "description": "Event Manager Backend API",
  "type": "module",
  "main": "dist/app.js",
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/app.js",
    "dev": "ts-node-esm src/app.ts",
    "build": "tsc",
    "pretest": "bash scripts/setup-test-db.sh",
    "test": "NODE_ENV=test jest --config jest.config.cjs --runInBand",
    "test:watch": "jest --config jest.config.cjs --watch",
    "test:coverage": "jest --config jest.config.cjs --coverage",
    "typeorm": "typeorm-ts-node-esm",
    "migration:generate": "typeorm-ts-node-esm migration:generate ./src/migrations/CreateTables -d ./src/config/datasource.ts"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-validator": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.11.5",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "sqlite3": "^5.1.6",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
